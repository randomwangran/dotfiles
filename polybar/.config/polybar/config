[module/filesystem]
type                       = internal/fs
interval                   = 25
mount-0                    = /
label-mounted              = %{F#859900}%mountpoint%%{F-} %percentage_used%%
label-unmounted            = %mountpoint% not mounted
label-unmounted-foreground = ${colors.red}


