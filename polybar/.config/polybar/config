modules-left        = i3
modules-center      = date
modules-right       = mail reddit github battery volume backlight cpu temperature memory filesystem wireless-network

tray-position       = right
tray-padding        = 5
tray-maxsize        = 18


[module/i3]
type            = internal/i3
