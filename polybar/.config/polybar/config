font-0              = Tamzen:size=15;1
font-1              = Font Awesome 5 Free:style=Regular:pixelsize=8;1
font-2              = Font Awesome 5 Free:style=Solid:pixelsize=8;1
font-3              = Font Awesome 5 Brands:pixelsize=8;1
font-4              = Wuncon Siji:pixelsize=10;2
font-5              = WenQuanYi WenQuanYi Bitmap Song:size=10;2

modules-left        = i3
modules-center      = date
modules-right       = volume backlight memory cpu temperature battery filesystem wireless-network

tray-position       = right
tray-padding        = 5
tray-offset-y       = 0%
tray-offset-x       = 0%
tray-maxsize        = 18
tray-detached       = false
tray-transparent    = false
tray-color          = ${colors.background}


[global/wm]
margin-top        = 5
margin-bottom     = 5
wm-restack        = i3
override-redirect = false


[module/i3]
type          = internal/i3
index-sort    = true
enable-scroll = false

ws-icon-0       = 1: ;
ws-icon-1       = 2: ;
ws-icon-2       = 3: ;
ws-icon-3       = 4: ;
ws-icon-4       = 5: ;
ws-icon-5       = 6: ;
ws-icon-6       = 7: ;
ws-icon-default = 

label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.colour_gry}
label-mode                 = %mode%
label-mode-padding         = 1
label-mode-background      = ${colors.background}
label-focused              = %icon%
label-focused-foreground   = ${colors.foreground}
label-focused-background   = ${colors.background}
label-focused-padding      = 1
label-unfocused            = %icon%
label-unfocused-padding    = 1
label-visible              = %icon%
label-visible-padding      = 1
label-urgent               = %icon%
label-urgent-foreground    = ${colors.colour_red}
label-urgent-background    = ${colors.background}
label-urgent-padding       = 1


[module/battery]
type    = internal/battery
battery = BAT0
adapter = AC
full-at = 94

format-charging           = <animation-charging> <label-charging>
format-charging-underline = #ffb52a

format-discharging           = <ramp-capacity> <label-discharging>
format-discharging-underline = ${self.format-charging-underline}

format-full-prefix            = " "
format-full-prefix-foreground = ${colors.foreground}
format-full-underline         = ${self.format-charging-underline}

ramp-capacity-0          = 
ramp-capacity-1          = 
ramp-capacity-2          = 
ramp-capacity-foreground = ${colors.foreground}

animation-charging-0          = 
animation-charging-1          = 
animation-charging-2          = 
animation-charging-foreground = ${colors.foreground}
animation-charging-framerate  = 750
format-foreground             = ${colors.colour_grn}


[module/backlight]
type                     = internal/xbacklight
format-prefix            = " "
format-prefix-foreground = ${colors.colour_ylw}
label                    = %percentage%%


[module/cpu]
type                     = internal/cpu
interval                 = 1
format-prefix            = " "
format-prefix-foreground = ${colors.colour_cyn}
format-underline         = #f90000
label                    = %percentage%%


[module/date]
type              = internal/date
interval          = 1.0
date              = %a %d %b %Y
time              = "%H:%M:%S"
label             = %date% %time%
format            =  <label>
format-foreground = ${colors.colour_blu}
label-foreground  = ${colors.foreground}


[module/filesystem]
type                       = internal/fs
interval                   = 25
mount-0                    = /
label-mounted              = %{F#de935f}%mountpoint%%{F-} %percentage_used%%
label-unmounted            = %mountpoint% not mounted
label-unmounted-foreground = ${colors.colour_grn}


[module/memory]
type                     = internal/memory
interval                 = 2
format-prefix            = " "
format-prefix-foreground = ${colors.colour_mag}
format-underline         = #4bffdc
label                    = %percentage_used%%


[module/temperature]
type                  = internal/temperature
thermal-zone          = 0
warn-temperature      = 80
format                = <ramp> <label>
format-underline      = #f50a4d
format-warn           = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}
label                 = %temperature%
label-warn            = %temperature%
label-warn-foreground = ${colors.colour_red}
ramp-0                = 
ramp-1                = 
ramp-2                = 
ramp-foreground       = ${colors.colour_ylw}


[module/volume]
type                     = internal/volume
format-volume            =  <label-volume>
format-muted             =  <label-muted>
label-muted              = Muted
format-volume-foreground = ${colors.colour_org}
format-volume-background = ${colors.background}
label-volume-foreground  = ${colors.foreground}
format-muted-foreground  = ${colors.colour_org}
format-muted-background  = ${colors.background}
label-muted-foreground   = ${colors.foreground}


[module/wired-network]
type                           = internal/network
interface                      = enp0s31f6
interval                       = 3.0
accumulate-stats               = true
format-connected               =  <label-connected>
format-connected-foreground    = ${colors.colour_blu}
format-disconnected            =  <label-disconnected>
format-disconnected-foreground = ${colors.colour_red}
label-connected                = %ifname%
label-connected-foreground     = ${colors.foreground}
label-disconnected             = disconnected
label-disconnected-foreground  = ${colors.foreground}


[module/wireless-network]
type                           = internal/network
interface                      = wlp4s0
interval                       = 3.0
accumulate-stats               = true
format-connected               = <ramp-signal> <label-connected>
format-connected-foreground    = ${colors.colour_blu}
format-disconnected            =  <label-disconnected>
format-disconnected-foreground = ${colors.colour_red}
label-connected                = %essid%
label-connected-foreground     = ${colors.foreground}
label-disconnected             = disconnected
label-disconnected-foreground  = ${colors.foreground}
ramp-signal-4                  = 
ramp-signal-3                  = 
ramp-signal-2                  = 
ramp-signal-1                  = 
ramp-signal-0                  = 