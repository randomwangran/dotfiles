[bar/top]
monitor             = DP1
monitor-fallback    = eDP1
dpi                 = ${xrdb:Xft.dpi}
height              = 25
padding-left        = 1
padding-right       = 1
module-margin-left  = 1
module-margin-right = 1

background          = ${colors.black}
foreground          = ${colors.white}

font-0              = "Tamzen:size=15;0"
font-1 		    = "Font Awesome 5 Free:style=Regular:pixelsize=5;0"
