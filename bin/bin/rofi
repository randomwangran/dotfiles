#!/bin/bash

case $1 in
    "-d") action="drun"
          ;;
    "-w") action="window"
          ;;
    *) exit
       ;;
esac

rofi -modi "drun,window" \
     -show $action \
     -font "Source Code Pro 14" \
     -lines 8 \
     -separator-style none \
     -location 1 \
     -width 100 \
     -line-padding 2
